{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2016",
    "types": ["jest", "node"],
    "composite": true
  },
  "files": ["src/test-setup.ts"],
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/app/services/**/*.ts",
    "src/app/pages/**/*.ts",
    "src/app/shared/**/*.ts",
    "src/environments/**/*.ts",
    "../../libs/**/*.ts"
  ]
}
