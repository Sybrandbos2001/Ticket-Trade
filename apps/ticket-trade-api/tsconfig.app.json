{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "composite": true,
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "../../libs/domain/src/**/*.ts",
    "src/app/app.controller.ts",
  ],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
